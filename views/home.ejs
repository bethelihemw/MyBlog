<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h2><a href="/">Our Wonderfull App</a></h2>
        <nav>
            <a href="/login">Login</a>
        </nav>
    </header>
    <main>
        <form action="/register" method="post">  
            <% errors.forEach(error => { %> <p className="notice"><%= error %></p> <% }) %>
            
        <fieldset>
            <legend>Create an Account</legend>
            <label for="username"><small>Username</small></label>
            <input type="text" id="username" name="username" autocomplete="">


            <label for="password"><small>Password</small></label>
            <input type="password" id="password" name="password" autocomplete="">

            <br>
            <button>Sign Up</button>
        </fieldset>
        </form>
    </main>
    <footer>
        <small>&copy; Our wonderfull app</small>
    </footer>
</body>
</html>