<!DOCTYPE html>
<html lang="en">
<%- include('includes/head')%>
<body>
    <header>
        <h2><a href="/">Our Wonderfull App</a></h2>
        
    </header>
    <main>
        <form action="/edit-post/<%= post.id %>" method="POST">  
            <% errors.forEach(error => 
            { %> <p className="notice"><%= error %></p> <% 
        }) %>
            
        <fieldset>
            <legend>Editing the post</legend>
            <label for="title"><small>Title</small></label>
            <input type="text" value="<%= post.title %>" id="title" name="title" autocomplete="">


            <label for="body"><small>Content</small></label>
            <textarea name="body" id="body"> <%= post.body %> </textarea>

            <br>
            <button>Change Post</button>
        </fieldset>
        </form>
       
    </main>
    <%- include('includes/footer')%>
</body>
</html>